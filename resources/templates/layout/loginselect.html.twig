
{% if property('loginOptions') %}
    <gr-select label="Login" placeholder="Login" class="login-select">
        <slot>{{ component('profile') }}</slot>
        {% for loginOption in property('loginOptions') %}
            <gr-menu-item value="{{ loginOption['value'] }}">{{ loginOption['name'] }}</gr-menu-item>
        {% endfor %}
    </gr-select>
    <script>
        (function (select) {
            [...select.querySelectorAll('gr-menu-item')].map((item) => {
                item.addEventListener('click', () => {
                    location.href = item.value;
                });
            });
            select.classList.remove('login-select');
        })(document.querySelector('gr-select.login-select'));
    </script>
{% else %}
    {{ component('profile') }}
{% endif %}