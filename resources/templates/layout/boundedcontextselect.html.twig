{% if property('boundedContextHashmap').count() > 1 %}
<ion-select class="unhandled-bounded-select" label="{{ translate('apie.cms.bounded_context') }}" value="{{ property('selectedBoundedContextId') }}" label="Default label">
    {% for boundedContext in property('boundedContextHashmap') %}
        <ion-select-option value="{{ boundedContext.getId() }}">{{ boundedContext.getId() }}</ion-select-option>
    {% endfor %}
</ion-select>
<script>
(function (element) {
    element.addEventListener('ionChange', function (event) {
        const elm = event.target || element;
        location.href = {{ property('path') | json_encode | raw }} + elm.value + '/';
    })
    element.classList.remove('unhandled-bounded-select');
}(document.querySelector('.unhandled-bounded-select')));
</script>
{% else %}
<ion-title>&nbsp;</ion-title>
{% endif %}