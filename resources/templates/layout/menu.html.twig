<ion-header>
    <ion-toolbar>
        <ion-title>Menu</ion-title>
    </ion-toolbar>
</ion-header>
<ion-content>
    <div class="menu-content">
        <ion-list>
          {% for menuItem in property('menuItems') %}
            <ion-item>
              <a href="{{ menuItem['url'] }}" style="align-items: center; color: var(--gr-color-dark); display: flex; font-weight: var(--gr-font-weight-normal); margin-left: 0.5rem; padding: 0.5rem;">
                {{  menuItem['title'] }}
              </a>
            </ion-item>
          {% endfor %}
        </ion-list>
    </div>
</ion-content>